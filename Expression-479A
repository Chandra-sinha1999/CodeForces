#include<iostream>
using namespace std;
int main(void)
{
    int a,b,c;
    cin>>a>>b>>c;
    if((a!=1&&a!=0)&&(b!=1&&b!=0)&&(c!=1&&c!=0))
        cout<<a*b*c<<endl;
    else if(a==1&&b==1&&c==1)
    {
        cout<<a+b+c<<endl;
    }
    else
    {
        if(a==1)
        {
            if(b==1)
            {
                cout<<2*c<<endl;
            }
            else if(c==1)
            {
                cout<<a+b+c<<endl;
            }
            else
                cout<<(1+b)*c<<endl;
        }
        else if(b==1)
            {
                cout<<(min(a,c)+b)*max(a,c)<<endl;
            }
            //cout<<(min(a,c)+b)*max(a,c)<<endl;
        else if(c==1)
            {
                cout<<a*(b+c)<<endl;
            }
            //cout<<(min(a,b)+c)*max(a,b)<<endl;

    }
}
